
rule sankararaman_calls_to_hg38:
	input:
		snp_file="hg19ToHg38_snps.bed", # bed file made from liftover of hg19 snp positions to hg38 coordinates
		hg19file="summaries.release/CEU.hapmap/summaries/chr-{chr}.thresh-90.length-0.00.gz",
		skov_file="41586_2020_2225_MOESM3_ESM.txt" # fragments from skov et al. 
	output:
		"chr{chr}_sankararaman_vs_skov_frqs.txt"
	shell:
		"Rscript --vanilla sankararaman_vs_skov_calls.R {wildcards.chr} {input.snp_file} {input.hg19file} {input.skov_file}"
